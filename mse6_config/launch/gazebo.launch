<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="robot" default="mse6"/>
  <arg name="gui" default="true"/>
  <arg name="use_sim_time" default="true"/>  
  
  <!--
    FIXED_ODOM - map and odom statically fixed
    GAZEBO_GROUND_TRUTH - uses true pose of robot from gazebo to correct odom
    -->
  <arg name="localization_type" default="FIXED_ODOM"/>
  
  <group ns="$(arg robot)">
      <rosparam file="$(find mse6_config)/config/control/gazebo_control.yaml" command="load"/>
  </group>  
  
  <include file="$(find mse6_config)/launch/software.launch">
      <arg name="localization_type" value="$(arg localization_type)"/>
  </include>
    
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="gui" value="$(arg gui)"/>
      <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    </include>
        
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
    args="-param $(arg robot)/robot_description -urdf -z 0.1 -x 0 -y 0 -Y 0 -model $(arg robot)" /> 
  
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find mse6_config)/config/rviz/display.rviz" />
    
</launch>
